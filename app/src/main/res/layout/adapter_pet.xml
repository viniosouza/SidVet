<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carPets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:cardCornerRadius="6dp"
    tools:cardElevation="6dp"
    app:cardBackgroundColor="@color/azulBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nome do Cahorro-->
        <TextView
            android:id="@+id/nome_adapter_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Bolota"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tamanho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_adapter_pet"
            android:text="@string/tamanho"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/preto"/>

        <!-- TAMANHO do Cahorro-->
        <TextView
            android:id="@+id/tamanho_adapter_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_adapter_pet"
            android:text="120"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tamanho"
            android:layout_toEndOf="@+id/tamanho"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_adapter_pet"
            android:layout_toRightOf="@+id/tamanho_adapter_pet"
            android:text="@string/Idade"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/preto"/>

        <!-- IDADE do Cahorro-->
        <TextView
            android:id="@+id/idade_adapter_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_adapter_pet"
            android:text="10"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/idade"
            android:layout_toEndOf="@+id/idade"
            android:textColor="@color/colorPrimary"/>





    </RelativeLayout>

</android.support.v7.widget.CardView>